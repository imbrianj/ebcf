{{title-banner img-src="wods" page-title="ADMIN"}}

<div class="ui centered two column grid">

  <div class="twelve wide column">
    {{admin-menu}}
  </div>

  <div class="ui stackable centered grid page-grid">
    <table class="ui basic collapsing celled tablet stackable table">
      <thead>
        <tr>
          <th class="ui center aligned header">Active</th>
          <th class="ui center aligned header">Value</th>
          <th class="ui center aligned header">Enabled</th>
          <th class="ui center aligned header">Start Date (PACIFIC)</th>
          <th class="ui center aligned header">End Date (PACIFIC)</th>
          <th class="ui center aligned header">Edit</th>
        </tr>
      </thead>
      <tbody>
        {{#each sortedCallouts as |callout|}}
          {{#if callout.active}}
            <tr class="positive">
              <td class="center aligned">
                <i class="icon checkmark"></i>
              </td>

              <td>
                {{callout.value}}
              </td>

              <td class="center aligned">
                {{callout.enabled}}
              </td>

              <td>
                {{callout.prettyStartDate}}
              </td>

              <td>
                {{callout.prettyEndDate}}
              </td>
              <td>
                <a href="callout/{{callout.id}}/edit">Edit</a>
              </td>
            </tr>
          {{else}}
            <tr>
              <td class="center aligned">
                <i class="icon close"></i>
              </td>

              <td>
                {{callout.value}}
              </td>

              <td class="center aligned">
                {{callout.enabled}}
              </td>

              <td>
                {{callout.prettyStartDate}}
              </td>

              <td>
                {{callout.prettyEndDate}}
              </td>
              <td>
                <a href="callout/{{callout.id}}/edit">Edit</a>
              </td>
            </tr>
          {{/if}}

        {{/each}}
      </tbody>
    </table>
  </div>
</div>
