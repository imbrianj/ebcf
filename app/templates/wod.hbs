{{title-banner img-src="wods" page-title="WOD ARCHIVE"}}

<div class="ui centered two column mobile reversed stackable grid page-grid">

  <div class="five wide column">

    <div class="row">
      <div class="image-container">
        {{#if model.image}}
          <a href={{model.image}}>
            <img class="wod-image" src={{model.image}}>
          </a>
        {{else}}
          <img  width=300px class="place-holder-image">
        {{/if}}
      </div>
    </div>

    <div class="row">
      {{#each model.tags as |tag|}}
        <!-- <div class="ui animated button tag" {{action "tagButtonSelected" tag}}> -->
        {{#link-to 'wods' (query-params tag=tag.value) class="ui animated button tag-button"}}

          <div class="visible content">
            {{tag.value}}
          </div>
          <div class="hidden content">
            <i class="right arrow icon"></i>
          </div>
        <!-- </div> -->
        {{/link-to}}
      {{/each}}
    </div>

  </div>

  <div class="seven wide column">
    {{#link-to 'wods' (query-params tag="") class="read-more"}}
      <i class="chevron left icon"></i>
      Back
    {{/link-to}}
    <div class="ui huge header">{{model.prettyDate}}</div>

    {{#if model.strength}}
      <div class="ui large header orange">STRENGTH</div>
      <div class="pre">{{{model.strength}}}</div>
    {{/if}}
    {{#if model.conditioning}}
      <div class="ui large header orange">CONDITIONING</div>
      <div class="pre">{{{model.conditioning}}}</div>
    {{/if}}
  </div>


  {{#if model.description}}
    <div class="twelve wide column">
      <div class="ui horizontal divider">
        <i class="anchor icon"></i>
      </div>

      <div class="ui large header orange">ABOUT THIS WORKOUT</div>
      <div class="pre">{{{model.description}}}</div>

    </div>

    <div class="eight wide column">
      {{#if model.video_id}}
        {{ui-embed data-source="youtube" data-id=model.video_id}}
      {{/if}}
    </div>
  {{/if}}
</div>
